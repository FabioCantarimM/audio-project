{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./",
    "paths": {
      "util/*": ["src/util/*"],
      "src/*": ["src/*"]
    },
    "typeRoots": [
      "@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/dev.ts",
    "node_modules",
    "node_modules/**/*",
    "**/*.spec.ts",
    "**/__tests__/**",
    "src/debug/**"
  ]
}
